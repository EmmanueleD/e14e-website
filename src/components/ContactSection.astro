---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="py-32 relative overflow-hidden">
  <!-- Decorative background elements -->
  <div
    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-accent-orange/10 rounded-full blur-[100px] pointer-events-none"
  >
  </div>

  <div class="max-w-4xl mx-auto px-6 relative z-10 text-center">
    <h2 class="text-4xl md:text-6xl font-bold mb-8">
      {t("contact.title")}
      <br />
      <span class="text-accent-orange">{t("contact.titleAccent")}</span>
    </h2>

    <p class="text-xl text-text-muted mb-12 max-w-2xl mx-auto">
      {t("contact.description")}
    </p>

    <div class="flex flex-col md:flex-row items-center justify-center gap-6">
      <a
        href="mailto:e14e@emmanueledurante.com"
        class="btn-primary text-lg px-10 py-4"
      >
        {t("contact.cta")}
      </a>
      <a
        href="https://calendar.app.google/A19abVorATtkopNGA"
        target="_blank"
        rel="noopener noreferrer"
        class="text-white hover:text-accent-orange transition-colors font-medium"
      >
        {t("contact.ctaSecondary")}
      </a>
    </div>

    <div
      class="mt-20 pt-10 border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-6 text-text-muted text-sm"
    >
      <p>
        &copy; {new Date().getFullYear()} Emmanuele Durante. All rights reserved.
      </p>
      <div class="flex gap-6">
        <a
          href="https://www.linkedin.com/in/e14e/"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-white transition-colors">LinkedIn</a
        >
      </div>
    </div>
  </div>
</section>
