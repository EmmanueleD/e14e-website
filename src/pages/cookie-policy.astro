---
import Layout from "../layouts/Layout.astro";
import SectionTitle from "../components/SectionTitle.astro";
import FullWidthSection from "../components/FullWidthSection.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

// Get language from URL
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Cookie Policy | Emmanuele Durante">
  <FullWidthSection>
    <SectionTitle
      title="Cookie"
      accentText="Policy"
      alignment="start"
      titleSize="hero"
    />

    <div class="w-full max-w-4xl mx-auto prose prose-lg py-8">
      <p>
        This website does <strong>not use cookies or tracking tools</strong> such as Google Analytics, Facebook Pixel, or third-party cookies.
      </p>

      <p>
        Therefore, no cookie banner or consent is required.
      </p>

      <p>
        If this changes in the future, this policy will be updated accordingly.
      </p>
    </div>
  </FullWidthSection>
</Layout>
