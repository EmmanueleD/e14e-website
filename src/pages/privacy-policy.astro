---
import Layout from "../layouts/Layout.astro";
import SectionTitle from "../components/SectionTitle.astro";
import FullWidthSection from "../components/FullWidthSection.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

// Get language from URL
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Privacy Policy | Emmanuele Durante">
  <FullWidthSection>
    <SectionTitle
      title="Privacy"
      accentText="Policy"
      alignment="start"
      titleSize="hero"
    />

    <div class="w-full max-w-4xl mx-auto prose prose-lg py-8">
      <h2>Data Controller</h2>
      <p>
        <strong>Name:</strong> Emmanuele Durante<br />
        <strong>Address:</strong> Via Antonio Carini, 13<br />
        <strong>Email:</strong> e14e@emmanueledurante.com
      </p>

      <h2>Types of Data Collected</h2>
      <p>
        The website collects personal data voluntarily provided by the user through the contact form, such as name, email address, and message content.
      </p>

      <h2>Purpose of Processing</h2>
      <p>
        The data is used exclusively to respond to inquiries and provide requested information regarding web services.
      </p>

      <h2>Legal Basis</h2>
      <p>
        The processing is based on the explicit consent of the user provided when submitting the contact form.
      </p>

      <h2>Data Retention</h2>
      <p>
        Personal data is kept only as long as necessary to respond to the inquiry and provide related services.
      </p>

      <h2>User Rights</h2>
      <p>
        At any time, users may request access, rectification, deletion, or restriction of their data by writing to: <strong>e14e@emmanueledurante.com</strong>
      </p>

      <h2>Data Sharing</h2>
      <p>
        No data is sold or shared with third parties unless required by law.
      </p>
    </div>
  </FullWidthSection>
</Layout>
