---
import Layout from "../../layouts/Layout.astro";
import SectionTitle from "../../components/SectionTitle.astro";
import FullWidthSection from "../../components/FullWidthSection.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

// Get language from URL
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Política de Cookies | Emmanuele Durante">
  <FullWidthSection>
    <SectionTitle
      title="Política de"
      accentText="Cookies"
      alignment="start"
      titleSize="hero"
    />

    <div class="w-full max-w-4xl mx-auto prose prose-lg py-8">
      <p>
        Este sitio web <strong>no utiliza cookies ni herramientas de seguimiento</strong> como Google Analytics, Facebook Pixel o cookies de terceros.
      </p>

      <p>
        Por lo tanto, no se requiere ningún banner de cookies ni consentimiento.
      </p>

      <p>
        Si esto cambia en el futuro, esta política se actualizará en consecuencia.
      </p>
    </div>
  </FullWidthSection>
</Layout>
